<?xml version="1.0" encoding="utf-8"?>
<resources>
    
<style name="toggle_identification">

    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="iconSize">35dp</item>
    <item name="iconGravity">textStart</item>
    <item name="iconPadding">0dp</item>
    <item name="backgroundTint">@color/black</item>

</style>

    <style name="toggle_gender">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/mainSecond</item>
        <item name="iconSize">100dp</item>
    </style>

    <style name="act_lvl_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">80dp</item>
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="radio_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/acme</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">25dp</item>
        <item name="android:layout_marginHorizontal">50dp</item>
    </style>

    <style name="next_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/mainPrimary</item>
        <item name="cornerRadius">100dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">40dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/mainText</item>
        <item name="icon">@drawable/ic_baseline_arrow_forward_24</item>
    </style>

    <style name="done_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/mainPrimary</item>
        <item name="cornerRadius">100dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">40dp</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/mainText</item>
        <item name="icon">@drawable/baseline_done_outline_24</item>
    </style>

    <style name="SpinnerTextStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="Theme.BodyApp.WithActionBar" parent="Theme.BodyApp">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    
</resources>